  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin well", :method => :put}) do |f| %>
  <%= devise_error_messages! %>
    <h2 class="form-signin-heading">Настройка пользователя</h2>
    
    <div class="form-group">
      <%= f.label :username, 'Имя пользователя' %>
      <%= f.text_field :username, :autofocus => true, :class => "form-control", :readonly => true, :placeholder => "Имя пользователя" %>
    </div>

    <div class="form-group">
      <%= f.label :fio, 'ФИО' %>
      <%= f.text_field :fio, :autofocus => true, :class => "form-control", :placeholder => "ФИО" %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Пароль' %> <small><i>Оставьте пустым, если не хотите менять</i></small>
      <%= f.password_field :password, :class => "form-control", :placeholder => "Пароль" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Подтверждение пароля' %>
      <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Подтверждение пароля" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, 'Текущий пароль' %> <small><i>Текущий пароль для применения изменений</i></small>
      <%= f.password_field :current_password, :class => "form-control", :placeholder => "Текущий пароль" %>
    </div>


    <%= f.submit "Обновить", :class => "btn btn-lg btn-primary btn-block" %>

  <% end %>
